@model José_finLogistics.Models.Client

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<br /><br />
      <div style="text-align:left">
          @if (ViewBag.Message != null)

          {
